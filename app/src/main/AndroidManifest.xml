<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.G2_WeckMichMal"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.components.WelcomeScreen"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
        </activity>
        <activity
            android:name=".ui.components.InformationScreen"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
        </activity>
        <activity
            android:name=".ui.components.SettingsScreen"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
        </activity>
        <activity
            android:name=".ui.components.AlarmClockOverviewScreen"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
        </activity>
        <activity
            android:name=".ui.components.AlarmClockEditScreen"
            android:exported="true"
            android:theme="@style/Theme.G2_WeckMichMal">
        </activity>
        <service android:name=".ForegroundService"
            android:foregroundServiceType="specialUse"
            android:exported="false">
        </service>
    </application>

</manifest>